#!/usr/bin/env bash

rm -rf ./node_modules

mv /wkarmybuildertemp/node_modules .

rm -r /wkarmybuildertemp

if [ "$#" == 0 ]; then

  npm install
  rm -rf ./src/css
  rm -rf ./src/fonts
  rm -rf ./src/js
  mv ./node_modules/materialize-css/dist/css ./src/
  mv ./node_modules/materialize-css/dist/fonts ./src/
  mv ./node_modules/materialize-css/dist/js ./src/
  pushd ./node_modules/materialize-css 
  grunt monitor & 
  popd
  npm start

else
  exec "$@"
fi
