#!/usr/bin/env bash

rm -rf ./node_modules

mv /wkarmybuildertemp/node_modules .

rm -r /wkarmybuildertemp

if [ "$#" == 0 ]; then

  npm install
  mv ./node_modules/materialize-css/css ./src
  mv ./node_modules/materialize-css/fonts ./src
  mv ./node_modules/materialize-css/js ./src
  pushd ./node_modules/materialize-css 
  grunt monitor & 
  popd
  npm start

else
  exec "$@"
fi
